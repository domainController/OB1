---
const { title, date, tags, excerpt, url } = Astro.props;
---
<a href={url} class="block bg-gray-800 p-4 rounded-lg shadow hover:shadow-lg transition">
  <h2 class="text-xl font-bold text-white">{title}</h2>
  <p class="text-gray-400 text-sm">{date}</p>
  <div class="mt-2 text-gray-300">{excerpt}</div>
  <div class="mt-3 flex gap-2 flex-wrap">
    {tags.map(tag => <span class="bg-gray-700 text-sm px-2 py-1 rounded">{tag}</span>)}
  </div>
</a>
